<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:d="urn:import:com.opensense.dashboard.client.utils"> 
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.no-sensor{
	background-color: #fff;
	height: 20px;
	text-align: center;
}
.sensor-container{
	margin-top: 10px;
	margin-bottom: 10px;
}
.sensor-container > Div{
	margin-bottom: 15px;
}
.sensor-container > Div:last-child{
	margin-bottom: 0px !important; 
}
</ui:style>

<m:MaterialCollapsibleItem>
	<m:MaterialCollapsibleHeader>
		<m:MaterialLink ui:field="listItemId" text="ID=1234567" iconType="ARROW_DROP_DOWN" iconPosition="LEFT" textColor="BLACK"/>
	</m:MaterialCollapsibleHeader>
	<m:MaterialCollapsibleBody>
		<m:MaterialPreLoader ui:field="listItemSpinner" display="NONE" addStyleNames="margin-top-10 spinner">
			<m:MaterialSpinner/>
		</m:MaterialPreLoader>
		<bh:Div ui:field="listItemNoDataIndicator" addStyleNames="{style.no-sensor} round-corners margin-top-10 margin-bottom-10" width="100%">
			<bh:Span text="{lang.noListData}"/>
		</bh:Div>
		<bh:Div ui:field="listItemSensorContainer" addStyleNames="{style.sensor-container}" width="100%"/> 
	</m:MaterialCollapsibleBody>
</m:MaterialCollapsibleItem>

</ui:UiBinder>