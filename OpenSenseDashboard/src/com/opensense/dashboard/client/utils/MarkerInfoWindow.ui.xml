<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
		
	<ui:style>
	
		.infowindow{
			height: 200px;
			width: 200px;
			background-color: #606060;
		}
		
		.header{
			color: white;
			margin-left: 10px;
		}
		
		.data{
			color: white;
			margin-left: 10px;
			display: grid;
		}
		
		.data > Span{
			font-size: 13px;
		}
	
	</ui:style>
		
	<bh:Div ui:field="infoBox" addStyleNames="{style.infowindow}">
		<b:Heading ui:field="header" addStyleNames="{style.header}" size="H6"/>
		<bh:Div ui:field="data" addStyleNames="{style.data}"/>
		<m:MaterialButton  ui:field="iwSearchBtn" width="45%" text="search" textColor="WHITE" addStyleNames="d-btn margin-buttom-20"/>
		<m:MaterialButton  ui:field="iwVisuBtn" width="45%" text="visu" textColor="WHITE" addStyleNames="d-btn margin-buttom-20"/>
	</bh:Div>

</ui:UiBinder>