<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"> 	
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
	<ui:style>
	.paging-button{
		max-height: 24px;
	    max-width: 24px;
	    width: 24px;
	    height: 24px;
	    border-top-right-radius: 12px;
	    border-top-left-radius: 12px;
	    border-bottom-right-radius: 12px;
	    border-bottom-left-radius: 12px;
	    padding: unset;
	    margin-right: 10px;
        margin-bottom: 3px;
	}
	.paging-button > img{
	    margin-bottom: 13px;
   	 	height: 20px;
	}
	</ui:style>
		<bh:Div>
			<bh:Div>
				<m:MaterialButton ui:field="backwardsButton" addStyleNames="{style.paging-button} d-btn" title="{lang.backwards}">
					<m:MaterialImage url="{gui.backwards.getSafeUri.asString}" />
				</m:MaterialButton>
				<m:MaterialButton ui:field="backwardsStepByStepButton" addStyleNames="{style.paging-button} d-btn" title="{lang.backwardsStepByStep}">
					<m:MaterialImage url="{gui.backwardsStepbyStep.getSafeUri.asString}" />
				</m:MaterialButton>
				<bh:Span ui:field="pageNumber" text="0-0 of 0" addStyleNames="margin-right-10" title="{lang.pageConfiguration}" color="white"/>
				<m:MaterialButton ui:field="forwardsStepByStepButton" addStyleNames="{style.paging-button} d-btn" title="{lang.forwardsStepByStep}">
					<m:MaterialImage url="{gui.forwardsStepByStep.getSafeUri.asString}" />
				</m:MaterialButton>
				<m:MaterialButton ui:field="forwardsButton" addStyleNames="{style.paging-button} d-btn" title="{lang.forwards}">
					<m:MaterialImage url="{gui.forwards.getSafeUri.asString}" />
				</m:MaterialButton>
			</bh:Div>	
	</bh:Div>	
</ui:UiBinder> 