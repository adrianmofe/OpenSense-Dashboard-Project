<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.collapsible{
	background-color: #909090;
	border: none;
}
.light-grey{
	background-color: #909090;
}
.header{
	display: flex;
}	
.body{
	<!-- display: flex !important; -->
	cursor: pointer;
    border: none;	
}
.card-button{
	float: right;
    margin-top: 5px;
}
.card-button > img {
	width: 24px;
	filter: invert(100%);		
}
.icon-size{
	height: 40px;
	width: 40px;	
}
.left{
	width: 25%;
	display: flex;
	white-space: nowrap;
}
.mid{
	width: 55%;
	display: flex;
	white-space: nowrap;
}
.mid > Span{
	margin-right: 10px;
}
.right{
	width: 20%;
}
.font{
	font-size: 20px;	
}
.checkbox{
	display: flex !important;
	margin-top: 13px;
}
</ui:style>

<bh:Div ui:field="layout" addStyleNames="user-select-none padding-right-10">
	<m:MaterialCollapsible ui:field="collapsible" width="100%" addStyleNames="round-corners {style.collapsible}">
		<m:MaterialCollapsibleItem ui:field="item" addStyleNames="override-corners">
			<m:MaterialCollapsibleHeader ui:field="headerContainer" addStyleNames="round-corners {style.header}">
				<bh:Div addStyleNames="{style.left}">
					<m:MaterialCheckBox ui:field="checkbox" type="FILLED" addStyleNames="{style.checkbox}"/>
					<bh:Div addStyleNames="{style.icon-size} margin-right-10">
						<b:Image ui:field="icon" title="Temperatur" width="100%" height="100%" url="{gui.tempIconSvg.getSafeUri.asString}"/>
					</bh:Div>
					<m:MaterialLabel ui:field="header" text="HEADER" addStyleNames="{style.font}"/>
				</bh:Div>
				<bh:Div addStyleNames="{style.mid}" ui:field="midContainer"/>
				<bh:Div addStyleNames="{style.right}">
				</bh:Div>
			</m:MaterialCollapsibleHeader>
			<m:MaterialCollapsibleBody addStyleNames="{style.body}">
				<bh:Div ui:field="content" addStyleNames="{style.light-grey}"/>
				<m:MaterialPreLoader ui:field="spinner" addStyleNames="spinner">
					<m:MaterialSpinner/>
				</m:MaterialPreLoader>
			</m:MaterialCollapsibleBody>
		</m:MaterialCollapsibleItem>
  </m:MaterialCollapsible>
</bh:Div>

</ui:UiBinder>