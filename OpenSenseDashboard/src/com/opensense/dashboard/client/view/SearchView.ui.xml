<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.input{
	color: #FFF;
	margin-left: 7% !important;
	width: 86% !important;
}
.input:focus{
	border-bottom: 1px solid #42DCA3 !important;
}
.nav-bar{
	width: 40%; 
	background-color: #606060;	
}
.nav-bar a {
	display: none;	
}
.con{
}
.panel{
}
.margin > * {
	margin-right: 30px;
}	
.max> div > ul {
    max-height: 200px !important;
}
.sensor-container{
    max-height: 58vh;
    overflow: auto;
}
</ui:style>

<bh:Div ui:field="container" addStyleNames="{style.con}">
	<bh:Div ui:field="searchPanel" addStyleNames="{style.panel}">
		<bh:Div addStyleNames="flex {style.margin}">
			<m:MaterialNavBar ui:field="navBarSearch" addStyleNames="{style.nav-bar} round-corners"> 
		 		 <b:Input ui:field="searchInput" type="TEXT" placeholder="{lang.searchPlace}" addStyleNames="{style.input}"/>
		 	</m:MaterialNavBar>  
			<m:MaterialTextBox ui:field="minAccuracy" textColor="WHITE" width="30%" label="{lang.minAccuracy}"/>
			<m:MaterialTextBox ui:field="maxAccuracy" textColor="WHITE" width="30%" label="{lang.maxAccuracy}"/>
		</bh:Div>
		<bh:Div addStyleNames="flex {style.margin}">
			<m:MaterialListBox placeholder="{lang.measurand}" ui:field="measurandList" width="30%" textColor="WHITE" addStyleNames="{style.max} round-corners"/>
			<m:MaterialTextBox width="30%" textColor="WHITE" ui:field="maxSensors" label="{lang.maxSensors}"/>
			<m:MaterialButton  ui:field="searchButton" width="40%" text="{lang.search}" textColor="WHITE" addStyleNames="d-btn margin-top-20"/>
		</bh:Div>
	</bh:Div>	
	<m:MaterialPreLoader ui:field="spinner" display="NONE" addStyleNames="spinner">
		<m:MaterialSpinner/>
	</m:MaterialPreLoader>
	<bh:Div ui:field="sensorContainer" addStyleNames="{style.sensor-container}" width="100%"/>
</bh:Div>

</ui:UiBinder>