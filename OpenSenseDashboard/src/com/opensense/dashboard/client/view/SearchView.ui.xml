<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client" xmlns:d="urn:import:com.opensense.dashboard.client.utils"> 
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.input{
	color: #FFF;
	margin-left: 7% !important;
	width: 86% !important;
}
.input:focus{
	border-bottom: 1px solid #42DCA3 !important;
}
.nav-bar{
	width: 40%; 
	background-color: #606060;	
}
.nav-bar a {
	display: none;	
}
.con{
	max-height: 80vh;
    overflow: auto; 
    padding-right: 10px;
}
.panel{
    background: #202020;
    padding: 10px 10px 10px 10px;
}
.margin > * {
	margin-right: 30px;
}	
.margin > *:last-child{
	margin-right: 0px !important;
}
.max> div > ul {
    max-height: 200px !important;
}
.center {
	text-align: center;	
}
.sensor-container{
	margin-top: 10px;
	margin-bottom: 10px;
}
.sensor-container > Div{
	margin-bottom: 15px;
}
.sensor-container > Div:last-child{
	margin-bottom: 0px !important; 
}
.center-text{
	margin-left: 45px;
}
.no-sensor{
	background-color: #fff;
	height: 20px;
	
}
</ui:style>

<bh:Div ui:field="container" addStyleNames="{style.con}">
	<bh:Div ui:field="searchPanel" addStyleNames="{style.panel} round-corners">
		<bh:Div addStyleNames="flex {style.margin}">
			<m:MaterialNavBar ui:field="navBarSearch" addStyleNames="{style.nav-bar} round-corners"> 
		 		 <b:Input ui:field="searchInput" type="TEXT" placeholder="{lang.searchPlace}" addStyleNames="{style.input}"/>
		 	</m:MaterialNavBar>  
			<m:MaterialTextBox ui:field="minAccuracy" textColor="WHITE" width="30%" label="{lang.minAccuracy}"/>
			<m:MaterialTextBox ui:field="maxAccuracy" textColor="WHITE" width="30%" label="{lang.maxAccuracy}"/>
		</bh:Div>
		<bh:Div addStyleNames="flex {style.margin}">
			<m:MaterialListBox placeholder="{lang.measurand}" ui:field="measurandList" width="30%" textColor="WHITE" addStyleNames="{style.max} round-corners"/>
			<m:MaterialTextBox width="30%" textColor="WHITE" ui:field="maxSensors" label="{lang.maxSensors}"/>
			<m:MaterialButton  ui:field="searchButton" width="40%" text="{lang.search}" textColor="WHITE" addStyleNames="d-btn margin-top-20"/>
		</bh:Div>
	</bh:Div>	
	<bh:Div addStyleNames="{style.panel} flex round-corners margin-top-10 {style.margin}">
		<m:MaterialButton ui:field="showOnMapButton" width="33.3%" text="{lang.seletedShowOnMap}" textColor="WHITE" addStyleNames="d-btn"/>
		<m:MaterialButton  ui:field="showVisualizationsButton" width="33.3%" text="{lang.selectedShowVisualisations}" textColor="WHITE" addStyleNames="d-btn"/>
		<m:MaterialButton  ui:field="addToListButton" width="33.3%" text="{lang.selectedAddToList}" textColor="WHITE" addStyleNames="d-btn"/>
	</bh:Div>
	<bh:Div ui:field="dataContent" addStyleNames="margin-top-20 margin-bottom-20 {style.panel} round-corners {style.center}"> 
		<d:Pager ui:field="pagerTop" addStyleNames="{style.center-text}"/>
		<m:MaterialPreLoader ui:field="spinner" display="NONE" addStyleNames="margin-top-10 spinner">
			<m:MaterialSpinner/>
		</m:MaterialPreLoader>
		<bh:Div ui:field="noDataIndicator" addStyleNames="{style.no-sensor} round-corners margin-top-10 margin-bottom-10" width="100%">
			<bh:Span text="{lang.noData}" addStyleNames="{style.center-text}"/>
		</bh:Div>
		<bh:Div ui:field="sensorContainer" addStyleNames="{style.sensor-container}" width="100%"/> 
		<d:Pager ui:field="pagerBottom"  addStyleNames="{style.center-text}"/>
	</bh:Div>
</bh:Div>

</ui:UiBinder>