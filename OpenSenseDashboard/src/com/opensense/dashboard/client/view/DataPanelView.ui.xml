<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui">

	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	
	<ui:style>
	.main-page{
        padding: 0 40px 40px 40px;
        width: 100%;
	    height: 100%;
	}
	.content{
	    width: 100%;
	    height: 100%;
	}
	.heading{
		color: #FFF;
	}
	.loader {
	    position: absolute;
	    width: 100%;
	    height: 100%;
	    top: 0px;
	    left: 0px;
	   <!--  background: rgba(255, 255, 255, 0.701961); -->
	    z-index: 999;
	}
	.loader > Div{
		top: 40%;
		left: 45%;
	}
	</ui:style>
	
	<bh:Div>
		<bh:Div addStyleNames="vertical {style.main-page}">
			<bh:Div>
				<b:Heading size="H2" addStyleNames="{style.heading}">
					<bh:Text ui:field="heading"/>
				</b:Heading>
			</bh:Div>
			<bh:Div ui:field="content" addStyleNames="{style.content}" />
		</bh:Div>
		<bh:Div ui:field="loadingContainer" addStyleNames="{style.loader} spinner" />
	</bh:Div>
</ui:UiBinder>