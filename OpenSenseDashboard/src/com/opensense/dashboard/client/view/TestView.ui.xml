<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages"
		field="lang" />
	
<ui:style>
.container{
	position: absolute;
	left: 100px;
	top: 200px;
}
</ui:style>

<bh:Div ui:field="test">
	<bh:Div addStyleNames="{style.container}">
		<bh:Text text="{lang.text}"></bh:Text>
		<b:Tooltip text="Das macht er">
			<b:Button ui:field="button1" text="lang"/>
		</b:Tooltip>
	</bh:Div>
</bh:Div>

</ui:UiBinder>