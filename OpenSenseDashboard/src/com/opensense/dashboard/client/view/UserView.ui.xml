<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.content{
	display: flex;
	place-content: center;	
}
.login-container{
	display: grid;
	background-color: #202020;
	padding: 20px 20px;	
	width: 50%;
	height: 70vh;
    margin-top: 5vh;
    margin-right: 90px;
    place-content: center;
    place-items: center;
}
.center{
	display: flex;
	place-content: center;
}
.button-spinner{
	width: 20px;
    height: 20px;
    position: relative;
    left: -10px;
    top: 5px;
}
</ui:style>

<bh:Div addStyleNames="{style.content}">
	<bh:Div ui:field="loginContainer" addStyleNames="round-corners {style.login-container}">
		<m:MaterialTextBox textColor="WHITE" width="30vw" ui:field="userName" type="TEXT" label="{lang.username}"/>
		<m:MaterialTextBox textColor="WHITE" width="30vw" ui:field="password" type="PASSWORD" label="{lang.password}"/>
		<m:MaterialTextBox textColor="WHITE" width="30vw" ui:field="passwordVerify" type="PASSWORD" label="{lang.passwordVerify}" display="NONE"/>
		<bh:Div addStyleNames="{style.center}">
			<bh:Div addStyleNames="display-grid-center">
				<m:MaterialLabel ui:field="regiLabel" text="Registrieren" textColor="WHITE" addStyleNames="margin-bottom-10 clickable"/>
				<m:MaterialLabel text="Passwort vergessen?" textColor="WHITE" addStyleNames="margin-bottom-10 clickable"/>
				<m:MaterialButton ui:field="loginButton" text="Login" textColor="WHITE" addStyleNames="d-btn" width="150px">
					<m:MaterialPreLoader ui:field="spinner" display="NONE" addStyleNames="spinner {style.button-spinner}">
						<m:MaterialSpinner/>
					</m:MaterialPreLoader>
				</m:MaterialButton>
			</bh:Div>
		</bh:Div>
	</bh:Div>
</bh:Div>

</ui:UiBinder>