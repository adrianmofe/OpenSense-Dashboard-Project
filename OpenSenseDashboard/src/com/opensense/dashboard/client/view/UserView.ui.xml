<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.content{
	display: flex;
	place-content: center;	
}
.login-container{
	background-color: #202020;
	padding: 20px 20px;	
	width: 50%;
	height: 70vh;
    margin-top: 5vh;
    margin-right: 90px;
}
.center{
	display: flex;
	place-content: center;
}
</ui:style>

<bh:Div addStyleNames="{style.content}">
	<bh:Div ui:field="loginContainer" addStyleNames="round-corners {style.login-container}">
		<m:MaterialTextBox textColor="WHITE" ui:field="userName" type="TEXT" label="{lang.username}"/>
		<m:MaterialTextBox textColor="WHITE" ui:field="password" type="PASSWORD" label="{lang.password}"/>
		<bh:Div addStyleNames="{style.center}">
			<bh:Div addStyleNames="display-grid">
				<m:MaterialLabel text="Passwort vergessen?" textColor="WHITE"/>
				<m:MaterialButton ui:field="loginButton" text="Login" textColor="WHITE" addStyleNames="d-btn"/>
			</bh:Div>
		</bh:Div>
	</bh:Div>
</bh:Div>

</ui:UiBinder>