<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />

<ui:style>
.sensor-container{
    max-height: 58vh;
    overflow: auto;
    margin-left: 805px;
    margin-top: -455px;
}
</ui:style>

<bh:Div>

 <bh:Div ui:field="map" b:id="map"/>
	<bh:Div ui:field="sensorContainer" addStyleNames="{style.sensor-container}" width="600px"/>
  	<m:MaterialButton  ui:field="recenterBtn" width="100%" text="recenter" title="recenters map and zooms out" textColor="WHITE" addStyleNames="d-btn"/>
  	<m:MaterialButton  ui:field="clearBtn" width="100px" text="clear" title="clears all marker and clusters" textColor="WHITE" addStyleNames="d-btn"/>
  	<m:MaterialButton  ui:field="visuBtn" width="100px" text="visualize" title="gets all sensors and sends them to visuPage" textColor="WHITE" addStyleNames="d-btn"/>
  	<m:MaterialButton  ui:field="searchBtn" width="100px" text="search" title="gets all sensors and sends them to searchPage" textColor="WHITE" addStyleNames="d-btn"/>
</bh:Div>

</ui:UiBinder>