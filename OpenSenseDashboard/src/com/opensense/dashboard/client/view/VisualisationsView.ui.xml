<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:ma="urn:import:gwt.material.design.addins.client" xmlns:d="urn:import:com.opensense.dashboard.client.utils">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.input{
	color: #FFF;
	margin-left: 7% !important;
	width: 86% !important;
}
.input:focus{
	border-bottom: 1px solid #42DCA3 !important;
}
.nav-bar{
	width: 40%; 
	background-color: #606060;	
}
.nav-bar a {
	display: none;	
}
.con{
	max-height: 87vh;
    overflow: auto; 
    padding-right: 10px;
}
.panel{
    background: #202020;
    padding: 10px 10px 10px 10px;
    max-height: 30vh;
    overflow: auto;
}
.margin > * {
	margin-right: 30px;
}	
.margin > *:last-child{
	margin-right: 0px !important;
}
.max> div > ul {
    max-height: 200px !important;
}
.center {
	text-align: center;	
}
.sensor-container{
	margin-top: 10px;
	margin-bottom: 10px;
}
.sensor-container > Div{
	margin-bottom: 15px;
}
.sensor-container > Div:last-child{
	margin-bottom: 0px !important; 
}
.center-text{
	margin-left: 45px;
}
.no-sensor{
	background-color: #fff;
	height: 20px;	
}
.datepicker{
	margin-top: 0;
	margin-right: 10px;
	height: 5vh;
}
.visPanel {
	margin-bottom: 10px;
	height: 7vh;
	overflow: auto;
}
.chartContainer > *{
	width:100% !important;
}
</ui:style>

<bh:Div ui:field="container" addStyleNames="{style.con}">
	<bh:Div addStyleNames="{style.panel} flex round-corners margin-top-10 {style.margin}">
		<m:MaterialButton width="265px" ui:field="selectAllButton" text="{lang.deselectAllSensors}" textColor="WHITE" addStyleNames="d-btn margin-top-10"/>
		<bh:Div addStyleNames="display-block"> 
			<m:MaterialLabel textColor="WHITE" text="{lang.allSelectedSensors}"/>
			<m:MaterialButton ui:field="showInSearchButton" text="{lang.selectedShowInSearch}" textColor="WHITE" addStyleNames="d-btn margin-right-15"/>
			<m:MaterialButton ui:field="showOnMapButton" text="{lang.seletedShowOnMap}" textColor="WHITE" addStyleNames="d-btn margin-right-15"/>
			<!-- m:MaterialButton  ui:field="showVisualizationsButton" text="{lang.selectedShowVisualisations}" textColor="WHITE" addStyleNames="d-btn margin-right-15"/-->
			<m:MaterialButton  ui:field="addToListButton" text="{lang.selectedAddToList}" textColor="WHITE" addStyleNames="d-btn"/>
		</bh:Div>
	</bh:Div>
	<bh:Div ui:field="dataContent" addStyleNames="margin-top-20 margin-bottom-20 {style.panel} round-corners {style.center}">
		<m:MaterialPreLoader ui:field="pagerSpinner" display="NONE" addStyleNames="margin-top-10 spinner">
			<m:MaterialSpinner/>
		</m:MaterialPreLoader>
		<bh:Div ui:field="noDataIndicator" addStyleNames="{style.no-sensor} round-corners margin-top-10 margin-bottom-10" width="100%">
			<bh:Span text="{lang.noData}" addStyleNames="{style.center-text}"/>
		</bh:Div>
		<bh:Div ui:field="sensorContainer" addStyleNames="{style.sensor-container}" width="100%"/> 
	</bh:Div>
	<bh:Div addStyleNames="{style.panel} {style.visPanel} visPanel flex round-corners margin-top-10">
		<m:MaterialLabel textColor="WHITE" text="{lang.timespan}"/>
		<m:MaterialButton ui:field="customRange" text="{lang.customRange}" textColor="WHITE" waves="LIGHT" addStyleNames="d-btn"/>
		<m:MaterialDatePicker ui:field="startingDate" textColor="WHITE" autoClose="true" placeholder="{lang.from}" selectionType="YEAR" yearsToDisplay="100" addStyleNames="{style.datepicker}"/>
		<!-- ma:timepicker.MaterialTimePicker ui:field="startingTime" placeholder="Time"/-->
		<m:MaterialDatePicker ui:field="endingDate" textColor="WHITE" autoClose="true" placeholder="{lang.to}" selectionType="YEAR" yearsToDisplay="100" addStyleNames="{style.datepicker}"/>
		<!-- ma:timepicker.MaterialTimePicker ui:field="endingTime" placeholder="Time"/-->
		<m:MaterialButton ui:field="pastYear" text="{lang.pastYear}" textColor="WHITE" waves="LIGHT" addStyleNames="d-btn"/>
		<m:MaterialButton ui:field="pastMonth" text="{lang.pastMonth}" textColor="WHITE" waves="LIGHT" addStyleNames="d-btn"/>
		<m:MaterialButton ui:field="pastWeek" text="{lang.pastWeek}" textColor="WHITE" waves="LIGHT" addStyleNames="d-btn"/>
		<m:MaterialButton ui:field="past24Hours" text="{lang.past24Hours}" textColor="WHITE" waves="LIGHT" addStyleNames="d-btn"/>
	</bh:Div>
	<m:MaterialPreLoader ui:field="viewSpinner" display="NONE" addStyleNames="spinner">
		<m:MaterialSpinner/>
	</m:MaterialPreLoader>
	<bh:Div ui:field="chartContainer" width="100%" addStyleNames="{style.chartContainer}"/>
	
</bh:Div>

</ui:UiBinder>