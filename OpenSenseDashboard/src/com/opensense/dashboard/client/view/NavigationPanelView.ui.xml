<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui" 
	xmlns:bh="urn:import:org.gwtbootstrap3.client.ui.html" xmlns:m="urn:import:gwt.material.design.client.ui">
	
	<ui:with type="com.opensense.dashboard.client.utils.Languages" field="lang" />
		
	<ui:with type="com.opensense.dashboard.client.gui.GUIImageBundle" field="gui" />
	
<ui:style>
.nav-button{
	height: 80px;
    width: 100%;
	background-color: #606060;
}
.nav-button:hover{
	background-color:#42DCA3 ;
}
.bottom-con{
	position: absolute;
	width: 90px;
	bottom: 0px;
}
</ui:style>

<bh:Div addStyleNames="nav-container vertical">
	<b:ButtonGroup>
		<b:Button ui:field="homeButton" addStyleNames="{style.nav-button} nav-btn-img" />
		<b:Button ui:field="mapButton" addStyleNames="{style.nav-button} nav-btn-img" />
		<b:Button ui:field="searchButton" addStyleNames="{style.nav-button} nav-btn-img" />
		<b:Button ui:field="visualisationsButton" addStyleNames="{style.nav-button} nav-btn-img" />
		<b:Button ui:field="listButton" addStyleNames="{style.nav-button} nav-btn-img" />
	</b:ButtonGroup>
	<bh:Div addStyleNames="{style.bottom-con}">
		<b:Button ui:field="userButton" addStyleNames="{style.nav-button} nav-btn-img" />
	</bh:Div>
</bh:Div>

</ui:UiBinder>